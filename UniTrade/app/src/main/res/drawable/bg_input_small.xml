<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background -->
    <solid android:color="#FFFFFF"/>

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#D8D8D8" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Inner padding -->
    <padding
        android:left="6dp"
        android:top="4dp"
        android:right="6dp"
        android:bottom="4dp" />

</shape>