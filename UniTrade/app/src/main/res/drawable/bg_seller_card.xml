<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- CARD BACKGROUND -->
    <solid android:color="#F6FDFB" />

    <!-- BORDER (very light gray) -->
    <stroke
        android:width="0.5dp"
        android:color="#97D7D2" />

    <!-- ROUNDED CORNERS -->
    <corners android:radius="12dp" />

    <!-- INNER PADDING -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>