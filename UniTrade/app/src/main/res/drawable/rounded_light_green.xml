<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Light green fill -->
    <solid android:color="#E3F8F0" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional: a slightly darker green stroke -->
    <stroke
        android:width="1dp"
        android:color="#9BD9C2" />

    <!-- Optional padding inside -->
    <padding
        android:left="8dp"
        android:top="6dp"
        android:right="8dp"
        android:bottom="6dp" />

</shape>