<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="0dp"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/appBarRateUser"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Rate Other User" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- Question: Rating -->
            <TextView
                android:id="@+id/txtQuestionRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="What is your rate?"
                android:textColor="#333"
                android:textSize="34sp"
                android:textStyle="bold" />

            <!-- Star Rating -->
            <LinearLayout
                android:id="@+id/layoutStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:src="@drawable/ic_star_outline" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:src="@drawable/ic_star_outline" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:src="@drawable/ic_star_outline" />

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:src="@drawable/ic_star_outline" />

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:src="@drawable/ic_star_outline" />
            </LinearLayout>

            <!-- Question: Role -->
            <TextView
                android:id="@+id/txtQuestionRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:text="Which role are you rating the user for?"
                android:textAlignment="center"
                android:textColor="#5F5959"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuyer"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Buyer"
                    android:textColor="#00856F"
                    app:strokeColor="#00856F"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSeller"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Seller"
                    android:textColor="#00856F"
                    app:strokeColor="#00856F"
                    app:strokeWidth="2dp" />

            </LinearLayout>

            <!-- Review Label -->
            <TextView
                android:id="@+id/txtReviewLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:text="Please share your opinion\nabout the user"
                android:textAlignment="center"
                android:textColor="#333"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOptional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="(Optional)"
                android:textColor="#888"
                android:textSize="16sp" />

            <!-- Review Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_review_card"
                android:elevation="4dp">

                <EditText
                    android:id="@+id/edtReview"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:hint="Your review"
                    android:padding="12dp"
                    android:textSize="16sp" />
            </LinearLayout>


            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#00A06A"
                android:paddingVertical="12dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
