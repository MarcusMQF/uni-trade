<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Item Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_input"
                android:hint="Product name"
                android:padding="10dp"
                android:textSize="15sp" />


            <!-- CATEGORY TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Category"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- ROW 1 (always visible) -->
            <LinearLayout
                android:id="@+id/layoutCategoryRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatStationery"
                    style="@style/FilterButton"
                    android:checkable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"

                    android:background="@drawable/bg_filter_chip_selector"
                    android:letterSpacing="0.02"

                    android:text="Stationery"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatBook"
                    style="@style/FilterButton"
                    android:checkable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"

                    android:layout_weight="0.6"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Book"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatPersonalCare"
                    style="@style/FilterButton"
                    android:checkable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"

                    android:layout_weight="1"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Personal Care"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />
            </LinearLayout>

            <!-- ROW 2 (always visible) -->
            <LinearLayout
                android:id="@+id/layoutCategoryRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRoomEssentials"
                    style="@style/FilterButton"
                    android:checkable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:background="@drawable/bg_filter_chip_selector"
                    android:letterSpacing="0.02"

                    android:text="Room Essentials"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatFashion"
                    style="@style/FilterButton"
                    android:checkable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"

                    android:layout_weight="0.7"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Fashion"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatTextbook"
                    style="@style/FilterButton"
                    android:checkable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"

                    android:layout_weight="0.7"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Textbook"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />

                <!-- optional duplicate removed -->
            </LinearLayout>

            <!-- ▼▼▼ HIDDEN CATEGORY SECTION ▼▼▼ -->
            <LinearLayout
                android:id="@+id/layoutCategoryMoreRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatSports"
                    style="@style/FilterButton"
                    android:checkable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"

                    android:layout_weight="0.7"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Sports"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatHobbies"
                    style="@style/FilterButton"
                    android:checkable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"

                    android:layout_weight="1"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Hobbies"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatFood"
                    style="@style/FilterButton"
                    android:checkable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"

                    android:layout_weight="0.7"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Food"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCategoryMoreRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatOthers"
                    style="@style/FilterButton"
                    android:checkable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_filter_chip_selector"
                    android:letterSpacing="0.02"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Others"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />


            </LinearLayout>


            <!--android:visibility="gone"-->
            <!-- ▲▲▲ HIDDEN CATEGORY SECTION ▲▲▲ -->

            <!-- SHOW MORE -->
            <Button
                android:id="@+id/btnShowMoreCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="show more ▼"
                android:textColor="#444444"
                android:textSize="13sp" />

            <!-- SHOW LESS -->
            <Button
                android:id="@+id/btnShowLessCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="show less ▲"
                android:textColor="#444444"
                android:textSize="13sp"
                android:visibility="gone" />

            <!-- CONDITION TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Condition"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- USED DURATION ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Used"
                    android:textColor="#008B6E"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtUsedDuration"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_input_small"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:padding="4dp" />

                <Spinner
                    android:id="@+id/spinnerDurationUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:minHeight="0dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:background="@drawable/bg_spinner_chip"
                    android:textAlignment="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:spinnerMode="dialog"/>
            </LinearLayout>

            <!-- ROW 1 (ALWAYS VISIBLE) -->
            <LinearLayout
                android:id="@+id/layoutConditionRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCondGood"
                    style="@style/FilterButton"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:checkable="true"
                    android:layout_weight="1"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Good"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCondFair"
                    style="@style/FilterButton"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:checkable="true"


                    android:layout_weight="1"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Fair"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCondLikeNew"
                    style="@style/FilterButton"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:checkable="true"

                    android:layout_weight="1"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Like New"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />
            </LinearLayout>

            <!-- ROW 2 (ALWAYS VISIBLE) -->
            <LinearLayout
                android:id="@+id/layoutConditionRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCondBrandNew"
                    style="@style/FilterButton"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:checkable="true"

                    android:layout_weight="0.6"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Brand New"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCondNotWorking"
                    style="@style/FilterButton"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:checkable="true"

                    android:layout_weight="1"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="For Parts/ Not Working"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />
            </LinearLayout>

            <!-- ▼▼▼ HIDDEN EXTRA CONDITION ▼▼▼ -->
            <LinearLayout
                android:id="@+id/layoutConditionMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCondExcellent"
                    style="@style/FilterButton"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:checkable="true"

                    android:layout_weight="0.7"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Excellent"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCondOldButWorking"
                    style="@style/FilterButton"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:checkable="true"

                    android:layout_weight="1"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Old But Working"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCondRefurbished"
                    style="@style/FilterButton"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:checkable="true"

                    android:layout_weight="0.8"
                    android:background="@drawable/bg_filter_chip_selector"

                    android:letterSpacing="0.02"
                    android:text="Refurbished"
                    android:textAllCaps="false"
                    android:textColor="@color/filter_chip_text_selector"
                    app:backgroundTint="@null"
                    app:iconPadding="0dp"
                    app:rippleColor="@android:color/transparent" />


            </LinearLayout>
            <!-- ▲▲▲ HIDDEN EXTRA CONDITION ▲▲▲ -->

            <!-- SHOW MORE -->
            <Button
                android:id="@+id/btnShowMoreCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="show more ▼"
                android:textColor="#444444"
                android:textSize="13sp" />

            <!-- SHOW LESS -->
            <Button
                android:id="@+id/btnShowLessCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="show less ▲"
                android:textColor="#444444"
                android:textSize="13sp"
                android:visibility="gone" />

            <!-- Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Price"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM"
                    android:textColor="#008C6F"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/bg_input"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Location"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_input"
                android:hint="Product location"
                android:padding="10dp"
                android:textSize="15sp" />


            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Description"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At most 100 words"
                android:textColor="#888888"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_input"
                android:gravity="top|start"
                android:hint="Type your description"
                android:inputType="textMultiLine"
                android:maxLength="800"
                android:overScrollMode="never"
                android:padding="10dp"
                android:textSize="14sp" />

            <!-- Item Image -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Item Image"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At most 5 images"
                android:textColor="#888888"
                android:textSize="14sp" />

            <!-- Placeholder / Slider container -->
            <FrameLayout
                android:id="@+id/frameImageContainer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="8dp">

                <!-- Placeholder when no image -->
                <LinearLayout
                    android:id="@+id/layoutImagePlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E0F7F4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="62dp"
                        android:src="@drawable/upload_pic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="No image selected" />
                </LinearLayout>

                <!-- ViewPager for selected images -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerSellImages"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:visibility="gone"/>
            </FrameLayout>

            <!-- Dots -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabDotsSell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                app:tabIndicator="@null"
                app:tabIndicatorHeight="0dp"
                app:tabSelectedTextColor="@android:color/transparent"
                app:tabTextColor="@android:color/transparent" />

            <Button
                android:id="@+id/btnUploadImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="#D3EEE9"
                android:text="Upload"
                android:textColor="#333030" />

            <!-- QR PAYMENT SECTION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="QR Payment"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload your DuitNow/QR payment for verification"
                android:textColor="#888888"
                android:textSize="14sp" />

            <!-- QR Container -->
            <FrameLayout
                android:id="@+id/frameQRContainer"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="8dp">

                <!-- Placeholder when no QR uploaded -->
                <LinearLayout
                    android:id="@+id/layoutQRPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E0F7F4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_qr_placeholder" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="No QR uploaded" />
                </LinearLayout>

                <!-- Uploaded QR preview -->
                <ImageView
                    android:id="@+id/imgQRPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    android:background="#FFFFFF" />

            </FrameLayout>

            <Button
