<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- ITEM IMAGE -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp" />

        <!-- ITEM NAME -->
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgItem"
            android:layout_marginStart="10dp"
            android:text="Item Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- USER PROFILE ICON -->
        <ImageView
            android:id="@+id/imgSeller"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@id/txtName"
            android:layout_toRightOf="@id/imgItem"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:scaleType="centerCrop" />

        <!-- USERNAME -->
        <TextView
            android:id="@+id/txtSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtName"
            android:layout_toRightOf="@id/imgSeller"
            android:layout_alignTop="@id/imgSeller"
            android:layout_marginStart="6dp"
            android:text="Username"
            android:textSize="14sp"
            android:textColor="#444444" />

        <!-- DATE -->
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgSeller"
            android:layout_toRightOf="@id/imgItem"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:text="Date"
            android:textSize="12sp"
            android:textColor="#888888" />

        <!-- PRICE -->
        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="-RM10.99"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        </RelativeLayout>

        <!-- DELETE BUTTON (Shown only in Edit Mode) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="end"

        android:layout_marginBottom="8dp"
        android:backgroundTint="#E57373"
        android:text="Delete"
        android:textAllCaps="false"

        android:textColor="@android:color/white"
        android:textSize="14sp"

        android:visibility="gone"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_delete"
        app:iconGravity="textStart"

        app:iconPadding="8dp"
        app:iconTint="@android:color/white" />



</LinearLayout>
