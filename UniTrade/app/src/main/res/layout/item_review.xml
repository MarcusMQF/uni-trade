<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Review Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">

        <!-- Reviewer Profile Image -->
        <ImageView
            android:id="@+id/imgReviewer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_profile"
            android:clipToOutline="true"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Name + Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtReviewerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Helene Moore"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/ratingBarReview"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.RatingBar.Small" />

                <!-- Report Button -->
                <TextView
                    android:id="@+id/btnReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:text="Report"
                    android:textColor="#D32F2F"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Date -->
            <TextView
                android:id="@+id/txtReviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June 23, 2023"
                android:textSize="13sp"
                android:textColor="#888"
                android:layout_marginTop="2dp" />

            <!-- Comment -->
            <TextView
                android:id="@+id/txtReviewComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Very smooth transaction! Seller was friendly and responsive."
                android:textSize="14sp"
                android:textColor="#444" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#E5E5E5" />

</LinearLayout>
