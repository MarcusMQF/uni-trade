<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- background -->
    <solid android:color="#FFFFFF" />

    <!-- outline -->
    <stroke
        android:width="1dp"
        android:color="#32BFA3" /> <!-- UniTrade green -->

    <!-- rounded corners -->
    <corners android:radius="50dp" />

    <!-- inner padding -->
    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp" />

</shape>