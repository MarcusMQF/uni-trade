<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".LanguageActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/appBarLanguage"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_marginTop="56dp"
        app:title="Language"
        app:titleTextColor="@android:color/white" />

    <RadioGroup
        android:id="@+id/rgLanguages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <RadioButton
            android:id="@+id/rbEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/rbChinese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="中文 (Chinese)"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/rbMalay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahasa Melayu (Malay)"
            android:textSize="16sp"
            android:padding="12dp" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Save"
        android:textSize="16sp"
        app:cornerRadius="8dp" />

</LinearLayout>
