<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/appBarRatingReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/white"
        app:title="Rating &amp; Reviews" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Profile + Last Seen -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgUserProfile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle_profile"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/txtUsername"
                        android:text="Jonathan"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>

            <!-- User Description -->
            <TextView
                android:id="@+id/txtUserDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Friendly and reliable seller offering quality pre-loved items."
                android:textColor="#444"
                android:textSize="14sp" />

            <include
                android:id="@+id/includeRatingSummary"
                layout="@layout/layout_rating_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

            <!-- Tabs -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:tabIndicatorColor="#00A06A"
                app:tabSelectedTextColor="#00A06A"
                app:tabTextColor="#777" />

            <!-- ViewPager - shows All/User/Seller reviews -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />


        </LinearLayout>
    </ScrollView>

    <!-- Write review -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnWriteReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:src="@drawable/ic_write"
        app:backgroundTint="#3CB39B"
        app:tint="@android:color/white"
        app:fabCustomSize="64dp"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
    />

</LinearLayout>