<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#D7F0EB"
    tools:context=".HomeFragment">

    <!-- FULL PAGE SCROLL -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundTint="#00FF5722"
            android:paddingBottom="100dp"
            android:orientation="vertical">

            <!-- SEARCH ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/searchContainer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#F0F0F0"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0.5dp">

                    <EditText
                        android:id="@+id/edtSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_search"
                        android:drawablePadding="10dp"
                        android:hint="Search"
                        android:paddingStart="16dp"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:singleLine="true" />
                </com.google.android.material.card.MaterialCardView>

                <ImageButton
                    android:id="@+id/btnFilter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/ic_filter"
                    android:contentDescription="Filter"
                    app:tint="#000000" />
            </LinearLayout>

            <!-- FILTER BUTTON ROW (Latest, Nearest, Price) -->
            <LinearLayout
                android:id="@+id/filterButtonRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"
                android:visibility="visible">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLatest"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:text="latest"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:cornerRadius="50dp"
                    app:strokeWidth="0dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_filter_chip" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNearest"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:text="nearest"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    app:cornerRadius="50dp"
                    app:strokeWidth="0dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_filter_chip" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPrice"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:text="price ▼"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    app:cornerRadius="50dp"
                    app:strokeWidth="0dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_filter_chip" />
            </LinearLayout>

            <!-- FILTER PANEL (Detailed) -->
            <LinearLayout
                android:id="@+id/filterPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="0dp"
                android:padding="16dp"
                android:visibility="gone"
                android:orientation="vertical">

                <!-- Location -->
                <TextView
                    android:text="Location"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCampusOn"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.01"
                        android:text="On Campus"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        app:cornerRadius="50dp"
                        app:strokeWidth="0dp"
                        app:backgroundTint="@null"
                        android:background="@drawable/bg_filter_chip" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCampusOff"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.01"
                        android:text="Off Campus"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        app:cornerRadius="50dp"
                        app:strokeWidth="0dp"
                        app:backgroundTint="@null"
                        android:background="@drawable/bg_filter_chip" />
                </LinearLayout>

                <!-- Condition -->
                <TextView
                    android:layout_marginTop="12dp"
                    android:text="Condition"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUsed"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.01"
                        android:text="Used"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        app:cornerRadius="50dp"
                        app:strokeWidth="0dp"
                        app:backgroundTint="@null"
                        android:background="@drawable/bg_filter_chip"
                    />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUnused"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.01"
                        android:text="Unused"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        app:cornerRadius="50dp"
                        app:strokeWidth="0dp"
                        app:backgroundTint="@null"
                        android:background="@drawable/bg_filter_chip" />
                </LinearLayout>

                <!-- Price Range -->
                <TextView
                    android:layout_marginTop="12dp"
                    android:text="Price Range"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/minPrice"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:textSize="12sp"
                        android:background="@drawable/bg_input"
                        android:inputType="numberDecimal"
                        android:hint="MIN" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=" - " />

                    <EditText
                        android:id="@+id/maxPrice"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:textSize="12sp"
                        android:background="@drawable/bg_input"
                        android:inputType="numberDecimal"
                        android:hint="MAX" />
                </LinearLayout>

                <!-- Date After -->
                <TextView
                    android:layout_marginTop="12dp"
                    android:text="Date After"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/dateDay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:textSize="12sp"
                        android:background="@drawable/bg_input"
                        android:inputType="number"
                        android:hint="DD" />

                    <EditText
                        android:id="@+id/dateMonth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:textSize="12sp"
                        android:background="@drawable/bg_input"
                        android:inputType="number"
                        android:hint="MM" />

                    <EditText
                        android:id="@+id/dateYear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:textSize="12sp"
                        android:background="@drawable/bg_input"
                        android:inputType="number"
                        android:hint="YYYY" />
                </LinearLayout>

            </LinearLayout>

            <!-- CATEGORY TITLE -->
            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Category"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- CATEGORY LIST (Horizontal Scroll) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategory"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <!-- RECOMMENDED TITLE -->
            <TextView
                android:id="@+id/txtRecommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Recommended For You"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- RECOMMENDED GRID -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecommended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="8dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- ✅ ADDED: LOADING INDICATOR (Shows while loading from Firebase) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FLOATING CART BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="120dp"
        android:baselineAlignBottom="false"
        android:src="@drawable/ic_cart"
        app:backgroundTint="#3CB39B"
        app:fabCustomSize="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="36dp"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>