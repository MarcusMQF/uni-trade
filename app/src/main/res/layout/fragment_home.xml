<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:backgroundTint="#D7F0EB"
    tools:context=".HomeFragment">

    <!-- FULL PAGE SCROLL -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundTint="#00FF5722"
            android:orientation="vertical">

            <!-- SEARCH BAR -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/searchContainer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:backgroundTint="#D5F0EB"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0.5dp">

                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="393dp"
                    android:layout_height="52dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="10dp"
                    android:hint="Search"
                    android:paddingStart="16dp"
                    android:singleLine="true" />
            </com.google.android.material.card.MaterialCardView>


            <!-- CATEGORY TITLE -->
            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Category"
                android:textSize="20sp"
                android:textStyle="bold" />


            <!-- CATEGORY LIST (Horizontal Scroll) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategory"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            <!-- RECOMMENDED TITLE -->
            <TextView
                android:id="@+id/txtRecommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Recommended For You"
                android:textSize="20sp"
                android:textStyle="bold" />


            <!-- RECOMMENDED GRID -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecommended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="8dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- âœ… ADDED: LOADING INDICATOR (Shows while loading from Firebase) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FLOATING CART BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:baselineAlignBottom="false"
        android:src="@drawable/ic_cart"
        app:backgroundTint="#3CB39B"
        app:fabCustomSize="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="36dp"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
