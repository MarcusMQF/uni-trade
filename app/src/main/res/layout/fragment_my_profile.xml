<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".MyProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profileContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER SECTION -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <!-- Colored Background -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/bg_profile_header_gradient" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="40dp">

                    <!-- Profile Image with Edit Button -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgProfile"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/profile_pic_1"
                            app:civ_border_color="#FFFFFF"
                            app:civ_border_width="4dp" />

                        <ImageButton
                            android:id="@+id/btnEditProfile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignEnd="@+id/imgProfile"
                            android:layout_alignBottom="@+id/imgProfile"
                            android:background="@drawable/bg_circle_white"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="#009688" />
                    </RelativeLayout>

                    <!-- User Name & Handle -->
                    <TextView
                        android:id="@+id/txtUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/profile_username"
                        android:textColor="#2C3E50"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Rating Row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Invisible placeholder stars to prevent crashes if referenced -->
                        <View android:id="@+id/star1" android:layout_width="0dp"
                            android:layout_height="0dp" />
                        <View android:id="@+id/star2" android:layout_width="0dp"
                            android:layout_height="0dp" />
                        <View android:id="@+id/star3" android:layout_width="0dp"
                            android:layout_height="0dp" />
                        <View android:id="@+id/star4" android:layout_width="0dp"
                            android:layout_height="0dp" />
                        <View android:id="@+id/star5" android:layout_width="0dp"
                            android:layout_height="0dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_filled"
                            app:tint="#FFC107" />

                        <TextView
                            android:id="@+id/txtRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="4.5"
                            android:textColor="#2C3E50"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <!-- Quick Actions Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <!-- Reviews -->
                <LinearLayout
                    android:id="@+id/reviewButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_circle_teal_light">
                        <ImageView
                            android:id="@+id/imgReviews"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_review"
                            app:tint="#009688" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Reviews"
                        android:textColor="#546E7A"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Cart -->
                <LinearLayout
                    android:id="@+id/cartButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_circle_teal_light">
                        <ImageView
                            android:id="@+id/imgShoppingCart"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cart"
                            app:tint="#009688" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Cart"
                        android:textColor="#546E7A"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- History -->
                <LinearLayout
                    android:id="@+id/historyButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_circle_teal_light">
                        <ImageView
                            android:id="@+id/imgHistory"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_history"
                            app:tint="#009688" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="History"
                        android:textColor="#546E7A"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>


            <!-- Info Card (Bio & Personal) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bio"
                        android:textColor="#2C3E50"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Bio -->
                    <TextView
                        android:id="@+id/txtUserDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Loading..."
                        android:textColor="#546E7A"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFF0F1"
                        android:layout_marginBottom="16dp" />

                    <!-- Details List -->
                    <!-- Full Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            app:tint="#009688"
                            android:layout_marginEnd="16dp" />
                        <TextView
                            android:id="@+id/txtFullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:textColor="#37474F"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/sym_action_email"
                            app:tint="#009688"
                            android:layout_marginEnd="16dp" />
                        <TextView
                            android:id="@+id/txtEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="email@example.com"
                            android:textColor="#37474F"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/sym_action_call"
                            app:tint="#009688"
                            android:layout_marginEnd="16dp" />
                        <TextView
                            android:id="@+id/txtPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+123456789"
                            android:textColor="#37474F"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_dialog_map"
                            app:tint="#009688"
                            android:layout_marginEnd="16dp" />
                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123 Street"
                            android:textColor="#37474F"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Product Listings Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProductListings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/txtProductListingTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Listings"
                            android:textColor="#2C3E50"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnManageListings"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Manage"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/bg_button_teal_small"
                            android:backgroundTint="#009688"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Tabs -->
                    <LinearLayout
                        android:id="@+id/filterTabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_tab_container"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/tabActive"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Active"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#009688"
                            android:background="@drawable/bg_tab_selected_pill"
                            android:paddingVertical="8dp" />

                        <TextView
                            android:id="@+id/tabCompleted"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Sold"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#95A5A6"
                            android:paddingVertical="8dp" />
                    </LinearLayout>

                    <include
                        android:id="@+id/emptyListingState"
                        layout="@layout/layout_empty_list"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerMyProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingTop="16dp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>