<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- SEARCH BAR + FILTER ICON -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchBarContainer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/searchBox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#D5F0EB"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toStartOf="@id/btnFilter"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeWidth="0.5dp">

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="10dp"
                android:hint="Search"
                android:paddingStart="16dp"
                android:singleLine="true" />
        </com.google.android.material.card.MaterialCardView>

        <ImageButton
            android:id="@+id/btnFilter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@drawable/ic_filter"
            android:contentDescription="Filter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/filterButtonRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchBarContainer">

        <!-- LATEST BUTTON -->

        <!-- NEAREST BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLatest"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01"
            android:text="Latest"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:cornerRadius="50dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@null"
            android:background="@drawable/bg_filter_chip" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNearest"
            style="@style/FilterButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01"
            android:text="Nearest"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="normal"
            app:cornerRadius="50dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@null"
            android:background="@drawable/bg_filter_chip" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrice"
            style="@style/FilterButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01"
            android:text="Price â–¼"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="normal"
            app:cornerRadius="50dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@null"
            android:background="@drawable/bg_filter_chip" />
    </LinearLayout>


    <!-- FILTER PANEL (HIDDEN BY DEFAULT) -->
    <ScrollView
        android:id="@+id/filterPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterButtonRow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Location -->
            <TextView
                android:text="Location"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCampusOn"
                    style="@style/FilterButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:text="On Campus"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:cornerRadius="50dp"
                    app:strokeWidth="0dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_filter_chip" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCampusOff"
                    style="@style/FilterButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:text="Off Campus"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:cornerRadius="50dp"
                    app:strokeWidth="0dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_filter_chip" />
            </LinearLayout>

            <!-- Condition -->
            <TextView
                android:layout_marginTop="12dp"
                android:text="Condition"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUsed"
                    style="@style/FilterButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:text="Used"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:cornerRadius="50dp"
                    app:strokeWidth="0dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_filter_chip"
                />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUnused"
                    style="@style/FilterButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01"
                    android:text="Unused"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:cornerRadius="50dp"
                    app:strokeWidth="0dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_filter_chip" />
            </LinearLayout>

            <!-- Price Range -->
            <TextView
                android:layout_marginTop="12dp"
                android:text="Price Range"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/minPrice"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:textSize="12sp"
                    android:background="@drawable/bg_input"
                    android:hint="MIN" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" - " />

                <EditText
                    android:id="@+id/maxPrice"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:textSize="12sp"
                    android:background="@drawable/bg_input"
                    android:hint="MAX" />
            </LinearLayout>

            <!-- Date After -->
            <TextView
                android:layout_marginTop="12dp"
                android:text="Date After"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/dateDay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:textSize="12sp"
                    android:background="@drawable/bg_input"
                    android:hint="DD" />

                <EditText
                    android:id="@+id/dateMonth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:textSize="12sp"
                    android:background="@drawable/bg_input"
                    android:hint="MM" />

                <EditText
                    android:id="@+id/dateYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:textSize="12sp"
                    android:background="@drawable/bg_input"
                    android:hint="YYYY" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <!-- PRODUCT GRID -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchProducts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterPanel" />


    <!-- FLOATING CART BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_cart"
        app:backgroundTint="#3CB39B"
        app:fabCustomSize="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="36dp"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>